<?xml version="1.0" encoding="utf-8"?>
<com.wendu.wendutianqi.view.flowingdrawer.LeftDrawerLayout android:id="@+id/one_city_drawerlayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools">
    <!--content-->
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/one_city_CoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/one_city_AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/one_city_CollapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expandedTitleMarginStart="40dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >
            <!--
            contentScrim - 设置当完全CollapsingToolbarLayout折叠(收缩)后的背景颜色。
            expandedTitleMarginStart - 设置扩张时候(还没有收缩时)title向左填充的距离
            我们设置了layout_scrollFlags:
            scroll - 想滚动就必须设置这个。
            enterAlways - 实现quick return效果, 当向下移动时，立即显示View（比如Toolbar)。
            exitUntilCollapsed - 向上滚动时收缩View，但可以固定Toolbar一直在上面。
            enterAlwaysCollapsed - 当你的View已经设置minHeight属性又使用此标志时，你的View只能以最小高度进入，只有当滚动视图到达顶部时才扩大到完整高度。-->

            <ImageView
                android:id="@+id/one_city_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@mipmap/flower"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                />

            <android.support.v7.widget.Toolbar
                android:id="@+id/one_city_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:theme="@style/Theme.AppCompat.NoActionBar"
                app:layout_collapseMode="pin"
                android:clipToPadding="true"
                android:titleTextColor="@color/white"
                />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
     <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/one_city_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         app:layout_behavior="@string/appbar_scrolling_view_behavior"
         >
        <ScrollView
            android:id="@+id/one_city_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.wendu.wendutianqi.view.ErrorView
                    android:id="@+id/one_city_error"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                        <com.wendu.wendutianqi.view.NowCard
                            android:id="@+id/one_city_nowcard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            app:cardBackgroundColor="@color/blue"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="6dp"
                            app:contentPadding="10dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            />

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
     </android.support.v4.widget.SwipeRefreshLayout>
    </android.support.design.widget.CoordinatorLayout>
    <!--menu-->
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clipChildren="false"
        >
        <com.wendu.wendutianqi.view.flowingdrawer.FlowingView
            android:id="@+id/one_city_flowing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:id="@+id/one_city_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="25dp"
            android:paddingRight="10dp"
            />
    </RelativeLayout>

</com.wendu.wendutianqi.view.flowingdrawer.LeftDrawerLayout>