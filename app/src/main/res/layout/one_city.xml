<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wendu.wendutianqi.view.flowingdrawer.LeftDrawerLayout
        android:id="@+id/one_city_drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_light">
        <!--content-->

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/one_city_CoordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <android.support.design.widget.AppBarLayout
                android:id="@+id/one_city_AppBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                >
                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/one_city_CollapsingToolbarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:expandedTitleMarginStart="40dp"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                    app:statusBarScrim="@color/colorPrimaryDark"
                    app:contentScrim="@color/colorPrimary"
                    >

                    <ImageView
                        android:id="@+id/one_city_iv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/flower"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.7"
                        android:fitsSystemWindows="true"
                        />

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/one_city_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        app:theme="@style/Theme.AppCompat.NoActionBar"
                        app:layout_collapseMode="pin"
                        android:clipToPadding="true"
                        android:titleTextColor="@color/white"
                        />
                </android.support.design.widget.CollapsingToolbarLayout>
            </android.support.design.widget.AppBarLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/one_city_swipe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <android.support.v4.widget.NestedScrollView
                        android:id="@+id/one_city_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <com.wendu.wendutianqi.view.NowCard
                                    android:id="@+id/one_city_nowcard"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="3dp"
                                    app:contentPadding="10dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:visibility="gone"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    />
                                <com.wendu.wendutianqi.view.HoursCard
                                    android:id="@+id/one_city_hourscard"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="3dp"
                                    app:contentPadding="10dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true"
                                    android:visibility="gone"/>
                                <com.wendu.wendutianqi.view.DailyCardLine
                                    android:id="@+id/one_city_dailycard"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="3dp"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="3dp"
                                    app:contentPadding="10dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true"
                                    android:visibility="gone"
                                    />
                            </LinearLayout>

                        </RelativeLayout>
                    </android.support.v4.widget.NestedScrollView>

                </android.support.v4.widget.SwipeRefreshLayout>
                <com.wendu.wendutianqi.view.ErrorView
                    android:id="@+id/one_city_error"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </android.support.design.widget.CoordinatorLayout>

        <!--menu-->
        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:clipChildren="false"
            >
            <com.wendu.wendutianqi.view.flowingdrawer.FlowingView
                android:id="@+id/one_city_flowing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <FrameLayout
                android:id="@+id/one_city_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="20dp"
                android:paddingRight="10dp"
                />
        </RelativeLayout>

    </com.wendu.wendutianqi.view.flowingdrawer.LeftDrawerLayout>

    <com.wendu.wendutianqi.view.SecretTextView
        android:id="@+id/first_tv"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="做你想做的事\n其他的都是扯淡"
        android:textStyle="normal"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:background="@color/blue_light"/>
</RelativeLayout>
