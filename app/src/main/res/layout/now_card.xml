<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/now_card_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="24sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/now_card_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text=""
                    android:textSize="24sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/now_card_aqiL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/now_card_aqi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空气指数："
                    android:textColor="@color/white90"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/now_card_aqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white90"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/now_card_qlty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2sp"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/white90"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/now_card_tigan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text=""
                    android:textColor="@color/white90"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/now_card_wind"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text=""
                    android:textColor="@color/white90"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/now_card_shidu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text=""
                    android:textColor="@color/white90"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/now_card_qiya"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text=""
                    android:textColor="@color/white90"
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/now_card_jiangshui_kejian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@color/white90"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/now_card_du"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text=""
            android:lines="1"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:padding="0.1sp"/>

</LinearLayout>
