                android:gravity="center"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/daily_forecats_night4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/daily_forecats_night5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/daily_forecats_night6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@mipmap/line"
            android:layout_above="@+id/daily_card_viewpage"/>
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/daily_card_tablayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/daily_card_viewpage"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/daily_card_viewpage"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/daily_card_ll"/>
</RelativeLayout>
